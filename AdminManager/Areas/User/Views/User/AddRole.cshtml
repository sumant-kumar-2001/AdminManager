@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole> 



    <div class="col-12">
        <h1 class="text-primary">List of Roles</h1>
        <div class=" text-end">
        <a asp-area="User" asp-controller="User" asp-action="AddRoles" class="btn btn-primary">
            <i class="bi bi-person-plus-fill"></i> &nbsp; Add-Role
        </a>
       </div>
    </div>

<br />
<table class="table table-striped table-bordered">  
    <thead>  
        <tr>  
            <th>Id</th>  
            <th>Name</th>  
        </tr>  
    </thead>  
    <tbody>  
        @foreach (var role in Model)
        {  
                <tr>  
                    <td>@role.Id</td>  
                    <td>@role.Name</td>  
                </tr>  
        }  
    </tbody>  
</table>  
<a asp-area="User" asp-controller="User" asp-action="Back"
   class="btn btn-outline-dark mx-2"> <i class="bi bi-pencil-square"></i> Back </a>